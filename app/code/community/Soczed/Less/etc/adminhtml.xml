<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <less translate="title" module="less">
                                        <title>Less</title>
                                    </less>
                                </children>
                            </config>
                            <less translate="title" module="less">
                                <title>Less Files</title>
                                <sort_order>2000</sort_order>
                            </less>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <layout>
        <updates>
            <less>
                <file>soczed/less.xml</file>
            </less>
        </updates>
    </layout>
    <menu>
        <system>
            <children>
                <less translate="title" module="less">
                    <title>Less Files</title>
                    <sort_order>2000</sort_order>
                    <action>less/adminhtml_file/index</action>
                </less>
            </children>
        </system>
    </menu>
    <translate>
        <modules>
            <Soczed_Less>
                <files>
                    <default>Soczed_Less.csv</default>
                </files>
            </Soczed_Less>
        </modules>
    </translate>
</config>